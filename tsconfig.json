{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "strictPropertyInitialization": false,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "/",
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./"
  ]
}